<?xml version="1.0" encoding="UTF-8"?>
<view xmlns="http://asyncode.com/View"
	xmlns:mg="http://asyncode.com/Mongo"
	xmlns:op="http://asyncode.com/Interpreter"
	inherits="_settings_">

	<param name="id"/>

	<condition name="isLoggedIn">$ss.loggedIn</condition>

	<set name="user"
			 command="mg:findOne"
			 mg:coll="users">
		{"_id":objectID($.id)}
	</set>

</view>
